<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">

    
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/feed">Feed</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-6">
          <h3>Posts</h3>
          <ul class="messages">
          <% for(var i=0; i<posts.length; i++) {%>
            <li class="message">
              <a href="/post/<%= posts[i]._id %>">
                <h4><%= posts[i].caption %></h4>
                <img src="<%= posts[i].img %>" alt="">
              
              </a>  
              <button> DELETE </button>
            </li>
          <% } %>
          </ul>

          <h2>Make A Post</h2>
        <% if (user.local.email) { %>
          <form  enctype="multipart/form-data">
            <input type="text" name="address" placeholder="address" id="enterLocation">
            <input type="text" name="caption" placeholder="caption" id="caption">
            <input type="file" name="file-to-upload" id="photo">
            <button id="submit" type="button">Submit</button>
          </form>
        </div>
        <% } %>

        <h1> Bookmarked Posts</h1>
        <ul class="messages">
        <% for(var i=0; i<bookmarks.length; i++) {%>
          <li class="message">
            
              <h4><%= bookmarks[i].caption %></h4>
              <img src="data:image/<%=bookmarks[i].img.contentType%>;base64,
              <%=bookmarks[i].img.data.toString('base64')%>" class="card-img" alt="..." id="img">
            
            </a>  
           
          </li>
        <% } %>
        </ul>

        
</div>

<script type="text/javascript"
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB0vrbaqfRBzXOFbEGmsNORTWRdG3zNFBI&libraries=places">
</script>

<script src="main.js"></script>

</body>
</html>
